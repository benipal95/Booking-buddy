<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flight_card"
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cardviewstring"
        android:padding="30dp">

        <TextView
            android:id="@+id/flight_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/flight_dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/flight_origin"

            android:textColor="@color/common_google_signin_btn_text_light_default"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/flight_departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flight_dest"

            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/flight_return_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flight_departure_date"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/flight_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flight_return_date"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


